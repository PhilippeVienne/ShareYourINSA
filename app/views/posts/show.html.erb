<div class="container margin-top">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-1 avatar">
            <%- if @post.user.profile_user.avatar %>
              <img src="<%= @post.user.profile_user.avatar.url %>">
            <% end -%>
          </div>
          <div class="col-xs-11 name">
            <span class="first_name"><%= @post.user.profile_user.first_name %></span> <span class="last_name"><%= @post.user.profile_user.last_name %></span>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <%= @post.content %>
      </div>
      <div class="panel-footer">
        <div class="comments">
          <%- @post.comments.each do |comment| %>
            <div class="comment margin clearfix">
                <img src="<%= comment.user.profile_user.avatar.url %>" class="pull-left small-image">
                <span class="name">
                  <span class="first_name"><%= comment.user.profile_user.first_name %></span>
                  <span class="last_name"><%= comment.user.profile_user.last_name %></span>
                </span>
                <span class="content"><%= comment.content %></span>
            </div>
          <% end -%>
        </div>
        <form action="" method="get" class="create-comment-form" data-post-id="<%= @post.id %>">
          <div class="form-group">
            <div class="input-group">
              <input class="form-control create-comment"  title="write comment" placeholder="Write a comment ...">
              <span class="input-group-btn">
                <button class="btn btn-default" type="submit">Comment</button>
              </span>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>