
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2 class="text-center">Log in</h2>

      <div class="row">
        <div class="col-xs-12">
          <div class="well">
            <div id="linkedin-login-button" class="text-center">
              <%= link_to omniauth_authorize_path(:user, :linkedin) do %>
                <%= image_tag 'linkedin.png' %>
              <% end %>
            </div>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group">
                  <%= f.email_field :email, autofocus: true, placeholder: t('email'), class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password, autocomplete: 'off', placeholder: t('password'), class: 'form-control' %>
                </div>

                <% if devise_mapping.rememberable? -%>
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                <% end -%>

                <div class="actions">
                  <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


