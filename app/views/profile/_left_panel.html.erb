<div class="col-sm-4 sidenav" id="profile">
  <header id="header" class="text-right">
    <h2><%= @profile_user.first_name %> <%= @profile_user.last_name%></h2>

    <img src="<%= @profile_user.avatar.url %>" class="img-circle" alt="T-Rex" width="150" height="150">
    <h3><%= @profile_user.company_name %>
    </h3> <br />
    <p>
      <%= @profile_user.location %><br />
      <%= @profile_user.phone_number %><br />
      <%= @profile_user.languages_spoken %><br />
      <%= @profile_user.skills %><br />
      <%= @profile_user.diplomas %><br />
    </p>
    <% if can?(:edit, @profile_user) && @profile_user.user == current_user %>
      <%= link_to 'Edit', {action: :edit}, class: %w(btn btn-default btn-lg)  %>
    <% end %>
  </header>
</div>