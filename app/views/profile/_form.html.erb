<%= form_for(@profile_user, url: {controller: :profile, action: :update}) do |f| %>
  <% if @profile_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile_user.errors.count, "error") %> prohibited this profile_user from being saved:</h2>

      <ul>
      <% @profile_user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :first_name %><br>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
        <%= f.label :company_name %>
        <%= f.text_field :company_name, class: 'form-control' %>
      </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
        <%= f.label :industry_domain %><br>
        <%= f.text_field :industry_domain, class: 'form-control' %>
      </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :avatar %>
          <%= f.file_field :avatar, class: 'form-control' %>
        </div>
      </div>
      <div class="col-md-6"></div>
    </div>


  <div class="form-group">
    <%= f.label :location %><br>
    <%= f.text_field :location, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :phone_number %><br>
    <%= f.text_field :phone_number, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :languages_spoken %><br>
    <%= f.text_area :languages_spoken, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :skills %><br>
    <%= f.text_area :skills, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :diplomas %><br>
    <%= f.text_area :diplomas, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :promotion %><br>
    <%= f.select(:promotion_id, options_for_select(Promotion.all), :prompt => 'Select', html:{class: 'form-control'}) %>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-success btn-block' %>
  </div>
    <div class="clearfix"></div>
